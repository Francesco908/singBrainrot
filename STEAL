-- Auto Farm script per BrainRot
-- Quando attivato crea un pulsante mobile e chiudibile per abilitare/disabilitare l'auto farm

-- SERVICES
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

-- REFERENCES
local player = Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local root = char:WaitForChild("HumanoidRootPart")

-- GUI CREATION
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "AutoFarmGui"
screenGui.ResetOnSpawn = false
screenGui.Parent = player:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Name = "AutoFarmFrame"
frame.Size = UDim2.new(0, 150, 0, 50)
frame.Position = UDim2.new(0, 50, 0.5, -25)
frame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
frame.Active = true
frame.Draggable = true
frame.Parent = screenGui

local toggleBtn = Instance.new("TextButton")
toggleBtn.Name = "ToggleButton"
toggleBtn.Size = UDim2.new(1, -20, 1, -20)
toggleBtn.Position = UDim2.new(0, 10, 0, 10)
toggleBtn.BackgroundColor3 = Color3.fromRGB(75, 75, 75)
toggleBtn.TextColor3 = Color3.new(1, 1, 1)
toggleBtn.Text = "Auto Farm: OFF"
toggleBtn.Parent = frame

local closeBtn = Instance.new("TextButton")
closeBtn.Name = "CloseButton"
closeBtn.Size = UDim2.new(0, 20, 0, 20)
closeBtn.Position = UDim2.new(1, -25, 0, 5)
closeBtn.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
closeBtn.TextColor3 = Color3.new(1, 1, 1)
closeBtn.Text = "X"
closeBtn.Parent = frame

-- LOCAL STATE
local autoFarmEnabled = false

-- FUNCTION: trova tutti gli item nel workspace
define AutoFarm loop

local function getNearestItems()
    local items = {}
    for _, obj in pairs(workspace:GetDescendants()) do
        if obj:IsA("BasePart") and obj.Name == "Item" then
            table.insert(items, obj)
        end
    end
    -- ordina per distanza crescente
table.sort(items, function(a,b)
        return (root.Position - a.Position).Magnitude < (root.Position - b.Position).Magnitude
    end)
    return items
end

-- MAIN LOOP
local farmConnection

local function startAutoFarm()
    farmConnection = RunService.Heartbeat:Connect(function()
        if autoFarmEnabled then
            local items = getNearestItems()
            if #items > 0 then
                local target = items[1]
                -- teletrasporta istantaneamente il giocatore
                root.CFrame = target.CFrame + Vector3.new(0, 3, 0)
            end
        end
    end)
end

local function stopAutoFarm()
    if farmConnection then
        farmConnection:Disconnect()
        farmConnection = nil
    end
end

-- TOGGLE BUTTON HANDLER
toggleBtn.MouseButton1Click:Connect(function()
    autoFarmEnabled = not autoFarmEnabled
    toggleBtn.Text = autoFarmEnabled and "Auto Farm: ON" or "Auto Farm: OFF"
    if autoFarmEnabled then
        startAutoFarm()
    else
        stopAutoFarm()
    end
end)

-- CLOSE BUTTON HANDLER
closeBtn.MouseButton1Click:Connect(function()
    stopAutoFarm()
    screenGui:Destroy()
end)

-- AVVIO
print("AutoFarm GUI initialized")
